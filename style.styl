// 1. Set default font family to sans-serif.
// 2. Prevent iOS text size adjust after orientation change, without disabling user zoom.

html {
    background-color: bg;
    font-family: font-stack;
    font-size: 14px;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
}

// Remove default margin.

body {
    margin: 0;
}

// Remove the gray background color from active links in IE 10.

a {
    background: transparent;
    color: accent;
}

em {
    color: #FFF;
    font-style: normal;
}

// Address styling not present in IE 8/9.

mark {
    background: yellow;
    color: black;
}

// Correct font family set oddly in Safari 5 and Chrome.

code,
pre {
    font-family: inherit;
    font-size: 1em;
}

*,
*::before,
*::after {
    box-sizing: border-box;
}

html,
body {
    color: darken(text, 20%);
    line-height: 1.3;
    height: 100%;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    overflow-x: hidden;
}

a {
    border-bottom: 1px dotted currentColor;
    text-decoration: none;
    transition: border-color 300ms ease;

    &:focus {
        outline: 1px solid currentColor;
        outline-offset: 3px;
    }

    &:hover {
        border-bottom-style: solid;
    }
}

a.fa {
    border: 1px solid transparent;
    font-size: 1.5em;
    margin-right: 1rem;
    padding: 1rem;
    text-decoration: none;

    &:first-child {
        margin-left: -1rem;
    }

    &:hover {
        border-color: accent;
    }
}

h2 {
    color: darken(text, 60%);
    font-size: 18px;
    font-weight: 400;
    flex-basis: auto;
    margin: 0 0 2rem;
    padding: 0;
    position: relative;
    // text-transform: uppercase;

    &:last-child {
        margin: 0;
    }

    span {
        display: block;
        margin-bottom: 40px;
        position: relative;

        &::after {
            background: accent;
            content: '';
            height: 1px;
            width: 30px;
            position: absolute;
            left: 0;
            bottom: -20px;
        }
    }
}

header {
    background: url('/rick.jpg') center right/cover no-repeat;
    align-items: flex-start;
    display: flex;
    flex-direction: column;
    font-size: 18px;
    min-height: 100vh;
    overflow: hidden;
    padding-top: 3rem;
    padding-left: padding;
    position: relative;

    &::after {
        background: linear-gradient(
            to right,
            rgba(#000, 0.8) 0%,
            rgba(#000, 0.6) 50%,
            transparent 100%
        );
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    > * {
        position: relative;
        z-index: 1;
    }

    footer {
        margin-top: auto;
        margin-bottom: 2rem;
    }

    pre {
        max-width: 60vw;

        code {
            color: darken(#FFF, 55%);

            a:not(:hover) {
                border: 0;
            }
        }
    }
}

code {
    background: rgba(#FFF, 0.15);
    color: #FFF;
    padding: 0 0.25rem;
}

pre {
    margin-top: 0;
    white-space: pre-line;
}

pre code {
    background: 0;
    padding: 0;
}

// Global classes + helpers

[aria-hidden] {
    display: none;
}

list-spacing = 3em

// Media queries

@media all and (max-width: 750px) {
    .media-not-small {
        display: none;
    }

    a {
        border: none !important;
    }

    header {
        font-size: 14px;
        padding: 10vw;

        &::after {
            background: linear-gradient(
                to right,
                rgba(#000, 0.9) 0%,
                rgba(#000, 0.5) 70%,
                transparent 100%
            );
        }
        pre {
            max-width: none;
        }
    }
}